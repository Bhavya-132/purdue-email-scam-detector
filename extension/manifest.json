{
  "manifest_version": 3,
  "name": "Purdue Email Scam Demo",
  "version": "0.3.0",
  "description": "Floating risk widget powered by local Flask /scan.",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": ["<all_urls>", "http://localhost:5000/*"],
  "action": { "default_title": "Scan Email", "default_popup": "popup.html" },
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ]
}